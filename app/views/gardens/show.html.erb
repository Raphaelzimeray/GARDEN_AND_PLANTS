
  <div class="div-show-garden">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @garden.photo.key, height: 300, crop: :fill, class: "photo-jardin" %>')">
    <div class="container">
      <div class="h1-jardin-show">
        <h1>Le Jardin <strong>est super</strong> super <strong>joli!</strong>!</h1>
      </div>
    </div>
  </div>
<div class="container">
    <div class="plant-image-and-name">
      <% @garden.plants.each do |plant| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path plant.photo.key, height: 300, crop: :fill%>')">
          <div class="plant-info">
            <h2 class="h2-plant-name"><%= plant.name.capitalize%></h2>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="create-a-plant">
    <%= simple_form_for [@garden, @plant] do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file  %>
    <%= f.button :submit %>
  <% end %>
  </div>
</div>
